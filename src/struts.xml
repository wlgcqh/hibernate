<struts>
	<package name="hibernate" extends="struts-default">

		<action name="savePerson" class="com.qiheng.action.PersonAction" method="savePerson">
				<result name="success">/queryAll.jsp</result>
		</action>
		
		<action name="deletePerson" class="com.qiheng.action.PersonAction" method="deletePerson">
				<result name="success">/queryAll.jsp</result>
		</action>
		
		<action name="queryPerson" class="com.qiheng.action.PersonAction" method="queryPerson">
				<result name="success">/queryPerson.jsp</result>
		</action>
			
		<action name="updatePerson" class="com.qiheng.action.PersonAction" method="queryPerson">
				<result name="success">/updatePerson.jsp</result>
		</action>
		
		<action name="updatePerson2" class="com.qiheng.action.PersonAction" method="updatePerson">
